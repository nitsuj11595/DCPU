	JSR	MAIN

:HALT
	SET	PC, HALT ;Loop Forever

;;; Definitions
:MONITOR_LEM
	DAT, 0xF615, 0x734D
:MONITOR_PIXIE
	DAT, 0xF615, 0x774D

;;; Variables

	
:MAIN
	JSR	GetMonitor
	JSR	String_copy
	
:GetMonitor
;;; Finds the first avaliable monitor
	SET	A,

:HEAP
	
